<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/background"
    tools:context=".MainActivity">
    
    <!-- Header with language switcher and font size controls -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="space_between|center_vertical"
        android:paddingBottom="8dp">
        
        <!-- Font size controls -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/font_size_label"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:paddingEnd="8dp"
                android:paddingStart="0dp" />
            
            <com.google.android.material.button.MaterialButton
                android:id="@+id/fontSizeSmallButton"
                android:layout_width="40dp"
                android:layout_height="36dp"
                android:text="@string/font_size_small"
                android:textSize="10sp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:layout_marginEnd="4dp"
                app:cornerRadius="4dp"
                style="@style/Widget.Material3.Button.TextButton"
                android:contentDescription="@string/accessibility_font_size_small" />
            
            <com.google.android.material.button.MaterialButton
                android:id="@+id/fontSizeMediumButton"
                android:layout_width="40dp"
                android:layout_height="36dp"
                android:text="@string/font_size_medium"
                android:textSize="12sp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:layout_marginEnd="4dp"
                app:cornerRadius="4dp"
                style="@style/Widget.Material3.Button.TextButton"
                android:contentDescription="@string/accessibility_font_size_medium" />
            
            <com.google.android.material.button.MaterialButton
                android:id="@+id/fontSizeLargeButton"
                android:layout_width="40dp"
                android:layout_height="36dp"
                android:text="@string/font_size_large"
                android:textSize="14sp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:layout_marginEnd="4dp"
                app:cornerRadius="4dp"
                style="@style/Widget.Material3.Button.TextButton"
                android:contentDescription="@string/accessibility_font_size_large" />
            
            <com.google.android.material.button.MaterialButton
                android:id="@+id/fontSizeExtraLargeButton"
                android:layout_width="44dp"
                android:layout_height="36dp"
                android:text="@string/font_size_extra_large"
                android:textSize="16sp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                app:cornerRadius="4dp"
                style="@style/Widget.Material3.Button.TextButton"
                android:contentDescription="@string/accessibility_font_size_extra_large" />
        </LinearLayout>
        
        <!-- Language button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/languageButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="@string/language_button"
            android:textSize="12sp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            app:backgroundTint="@color/button_clear"
            style="@style/Widget.Material3.Button.TextButton"
            android:contentDescription="@string/accessibility_language_button" />
    </LinearLayout>

    <!-- Header removed to maximize text display space -->

    <!-- Status text - hidden per user request -->
    <TextView
        android:id="@+id/statusText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        android:text="@string/status_ready"
        android:textSize="26sp"
        android:textColor="@color/text_secondary"
        android:gravity="center"
        android:paddingBottom="20dp"
        android:lineSpacingMultiplier="1.4"
        android:contentDescription="Status" />

    <!-- Scrollable text display -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/text_area_background"
        android:padding="16dp"
        android:layout_marginBottom="16dp">

        <EditText
            android:id="@+id/textDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_placeholder"
            android:textSize="32sp"
            android:textColor="@color/text_primary"
            android:lineSpacingExtra="14dp"
            android:lineSpacingMultiplier="1.5"
            android:background="@android:color/transparent"
            android:inputType="textMultiLine|textCapSentences"
            android:gravity="top|start"
            android:contentDescription="Fält för igenkänd text" />
    </ScrollView>

    <!-- Control buttons - horizontal layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="3">

        <!-- Microphone button - Material 3 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/micButton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="@string/button_start"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginEnd="4dp"
            app:backgroundTint="@color/button_start"
            style="@style/Widget.Material3.Button.Icon"
            android:contentDescription="@string/accessibility_mic_button" />

        <!-- Clear button - Material 3 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/clearButton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="@string/button_clear"
            android:textSize="14sp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            app:backgroundTint="@color/button_clear"
            style="@style/Widget.Material3.Button"
            android:contentDescription="@string/accessibility_clear_button" />
        
        <!-- Glasaktighetsvaxlare button - Material 3 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/glasaktigKnapp"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="@string/glasaktig_knapp"
            android:textSize="14sp"
            android:layout_marginStart="4dp"
            app:backgroundTint="@color/glasaktighet_kornhinna"
            style="@style/Widget.Material3.Button.TonalButton"
            android:contentDescription="@string/accessibility_theme_button" />
    </LinearLayout>

</LinearLayout>
