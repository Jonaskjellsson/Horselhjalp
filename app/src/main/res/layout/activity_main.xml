<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/background"
    tools:context=".MainActivity">
    
    <!-- Header with language switcher -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:paddingBottom="8dp">
        
        <com.google.android.material.button.MaterialButton
            android:id="@+id/languageButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="@string/language_button"
            android:textSize="12sp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            app:backgroundTint="@color/button_clear"
            style="@style/Widget.Material3.Button.TextButton"
            android:contentDescription="Toggle language" />
    </LinearLayout>

    <!-- Header removed to maximize text display space -->

    <!-- Status text - hidden per user request -->
    <TextView
        android:id="@+id/statusText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        android:text="@string/status_ready"
        android:textSize="26sp"
        android:textColor="@color/text_secondary"
        android:gravity="center"
        android:paddingBottom="20dp"
        android:lineSpacingMultiplier="1.4"
        android:contentDescription="Status" />

    <!-- Scrollable text display -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/text_area_background"
        android:padding="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/textDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_placeholder"
            android:textSize="32sp"
            android:textColor="@color/text_primary"
            android:lineSpacingExtra="14dp"
            android:lineSpacingMultiplier="1.5"
            android:contentDescription="Igenkänd text" />
    </ScrollView>

    <!-- Control buttons - horizontal layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="3">

        <!-- Microphone button - Material 3 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/micButton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="@string/button_start"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginEnd="4dp"
            app:backgroundTint="@color/button_start"
            style="@style/Widget.Material3.Button.Icon"
            android:contentDescription="Starta eller stoppa taligenkänning" />

        <!-- Clear button - Material 3 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/clearButton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="@string/button_clear"
            android:textSize="14sp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            app:backgroundTint="@color/button_clear"
            style="@style/Widget.Material3.Button"
            android:contentDescription="Rensa text" />
        
        <!-- Glasaktighetsvaxlare button - Material 3 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/glasaktigKnapp"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="@string/glasaktig_knapp"
            android:textSize="14sp"
            android:layout_marginStart="4dp"
            app:backgroundTint="@color/glasaktighet_kornhinna"
            style="@style/Widget.Material3.Button.TonalButton"
            android:contentDescription="@string/glasaktig_hjalp" />
    </LinearLayout>

</LinearLayout>
